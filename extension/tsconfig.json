{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "module": "es6",
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2020.string"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true
  }
}
