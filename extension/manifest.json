{
  "manifest_version": 2,
  "name": "wix-meido-improver",
  "version": "1.8.0",
  "browser_action": {
    "default_popup": "popup/page.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png"
  },
  "options_ui": {
    "page": "options/page.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://wix.getmeido.com/order*"
      ],
      "css": [
        "content/fixes.css",
        "content/styles/categoryAll.css",
        "content/styles/filters.css",
        "content/styles/oneClickBuy.css",
        "content/styles/orderButton.css",
        "content/styles/rating.css",
        "content/styles/spinner.css"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
        "modules/waitForSelector.js",
        "modules/localStorage.js",
        "modules/database.js",
        "modules/orders.js",
        "modules/categoryAll.js",
        "modules/highlight.js",
        "content/script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
      "options/storage.js",
      "modules/localStorage.js",
      "modules/notifications.js",
      "background/script.js"
    ]
  },
  "permissions": [
    "https://www.wix.com/_serverless/wix-meido-improver/*",
    "alarms",
    "notifications",
    "storage"
  ]
}
