{
  "manifest_version": 2,
  "short_name": "Wix Meido",
  "name": "Wix Meido Improver",
  "description": "User interface improver for wix.getmeido.com",
  "version": "2.0.1",
  "browser_action": {
    "default_popup": "popup/page.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png"
  },
  "options_ui": {
    "page": "options/page.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://wix.getmeido.com/*"
      ],
      "css": [
        "content/fixes.css",
        "content/styles/categoryAll.css",
        "content/styles/filters.css",
        "content/styles/oneClickBuy.css",
        "content/styles/orderButton.css",
        "content/styles/rating.css",
        "content/styles/spinner.css"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
        "modules/escapeHtml.js",
        "modules/waitForSelector.js",
        "modules/localStorage.js",
        "modules/database.js",
        "modules/orders.js",
        "modules/categoryAll.js",
        "modules/highlight.js",
        "modules/postMessageRPC.js",
        "content/rpcListener.js",
        "content/script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
      "options/storage.js",
      "modules/localStorage.js",
      "modules/notifications.js",
      "background/script.js"
    ]
  },
  "permissions": [
    "https://www.wix.com/_serverless/wix-meido-improver/*",
    "alarms",
    "notifications",
    "storage"
  ]
}
